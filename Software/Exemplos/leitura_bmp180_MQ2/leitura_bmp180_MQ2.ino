/*
 * Implementações
 */

/* Função: inicializa sensor BMP180
 * Parâmetros: nenhum
 * Retorno: nenhum
 */
void init_bmp180(void)
{
    if (!bmp180.begin()) 
    {
        Serial.println("[BMP180] Sensor nao encontrado.");
        while (1) 
        {
            delay(1);  
        }
    }
}

/* Função: le temperatura (do sensor BMP180)
 * Parâmetros: nenhum
 * Retorno:  temperatura lida
 */
float le_temperatura(void)
{   
    return bmp180.readTemperature();
}

/* Função: le sensor de pressão barométrica
 * Parâmetros: nenhum
 * Retorno:  pressao lida
 */
float le_pressao(void)
{
    return bmp180.readPressure();
}


void setup() 
{
    Serial.begin(115200);
    pinMode(GPIO_LED, OUTPUT);
    estado_led = HIGH;
    digitalWrite(GPIO_LED, estado_led);

    /* Configuração do sensor MQ-2 */
    pinMode(GPIO_MQ2, INPUT);
        
    /* Inicializa I²C (para comunicação com OLED e BMP180)*/
    Wire.begin(OLED_SDA_PIN, OLED_SCL_PIN);

    /* Inicializa display */
    if(!display.begin(SSD1306_SWITCHCAPVCC, OLED_ADDRESS)) 
    { 
        Serial.println("[ERRO] não foi possivel inicializar display. O NodeMCU será reiniciado em 1s...");
        delay(1000);
        ESP.restart();
    }
    else
    {
        Serial.println("Display inicializado.");
        display.clearDisplay();
        display.setTextColor(WHITE);
        display.setTextSize(1);
        display.setCursor(0,OLED_LINHA_1);
        display.println("   Kit wifi Heltec");
        display.setCursor(0,OLED_LINHA_2);
        display.println("        LoRa V1");
        display.setCursor(0,OLED_LINHA_3);
        display.println("_____________________");
        display.setCursor(0,OLED_LINHA_5);
        display.println("Pedro Bertoleti");
        display.setCursor(0,OLED_LINHA_6);
        display.println("pedrobertoleti.com.br");
        display.display();
        delay(500);
    }

    /* Inicializa BMP180 */
    init_bmp180();
}

void loop() 
{
    float pressao_kPa, temperatura;
    
    pressao_kPa = le_pressao()/1000.0;
    temperatura = le_temperatura();

    /*
     * BMP180
     */
    display.clearDisplay();
    display.drawBitmap(0, 0, termometro, 128, 64, 1);
    display.setTextColor(BLACK);
    display.setTextSize(2);
    display.setCursor(59,OLED_LINHA_2);
    sprintf(linha_str,"%.1fC", temperatura);
    display.println(linha_str);
    display.setCursor(40,OLED_LINHA_5);
    sprintf(linha_str,"%.1fkPa", pressao_kPa);
    display.println(linha_str);
    display.display();

    /* Espera e pisca o LED */
    digitalWrite(GPIO_LED, HIGH);
    delay(TEMPO_INFORMACAO_NA_TELA);
    
    /*
     * MQ-2
     */
    display.clearDisplay();
    
    if (digitalRead(GPIO_MQ2) == HIGH)
    {
        display.drawBitmap(0, 0, sem_fogo, 128, 64, 1);
        sprintf(linha_str,"Sem fogo");
    }
    else
    {    
        display.drawBitmap(0, 0, com_fogo, 128, 64, 1);
        sprintf(linha_str,"PERIGO!!!");
    }

    display.setTextSize(1);     
    display.setTextColor(SSD1306_BLACK); 
    display.setCursor(64,OLED_LINHA_3);
    display.println(linha_str);
    display.display();

    /* Espera e pisca o LED */
    digitalWrite(GPIO_LED, LOW);
    delay(TEMPO_INFORMACAO_NA_TELA);    
}
